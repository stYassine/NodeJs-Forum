<div class="card">
    <div class="card-header" data-background-color="purple">
        <h4 class="title">Create Comments</h4>
        <p class="category">Create New Comments</p>
    </div>
    <div class="card-content table-responsive">
        <form action="/admin/comments/create" method="POST">

        <div class="form-group">
                <label for="">Post</label>
                <select name="post" class="form-control" required>
                    <option value="">Choose</option>
                    {{#each posts}}
                    <option value="{{ this._id }}">{{ this.title }}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="">User</label>
                <select name="user" class="form-control" required>
                    <option value="">Choose</option>
                    {{#each users}}
                    <option value="{{ this._id }}">{{ this.email }}</option>
                    {{/each}}
                </select>
            </div>
            
            <div class="form-group">
                <label for="">Is Active</label>
                <select name="is_active" class="form-control" required>
                    <option value="">Choose</option>
                    <option value="1">Active</option>
                    <option value="0">DisActive</option>
                </select>
            </div>


            <div class="form-group">
                <label for="">Text</label>
                <textarea rows="7" name="text" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Create</button>
            </div>

        </form>
    </div>
</div>